{
  "manifest_version": 2,
  "name": "Idiono",
  "short_name": "Idiono",
  "version": "1.0.6",
  "description": "Replace your new tab with a better and simple one featuring built-in pomodoro, clock and more.",
  "icons": {
    "16": "logo/idiono-16.png",
    "32": "logo/idiono-32.png",
    "48": "logo/idiono-48.png",
    "128": "logo/idiono-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "offline_enabled": true,
  "browser_action": {
    "default_title": "Idiono"
  },
  "permissions": ["chrome://favicon/", "chrome://favicon/*"]
}
